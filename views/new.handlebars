<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">加入新的餐廳</h1>
      {{> message}}
      <form action="/restaurants" method="POST">
        <div class="mb-3">
          <label for="name">名稱</label>
          <input type="text" name="name" class="input" id="name" placeholder="請輸入餐廳名稱(必填)" value="{{ restaurant.name }}">
        </div>
        <div class="mb-3">
          <label for="category">類型</label>
          <input type="text" name="category" class="input" id="category" placeholder="請輸入餐廳類型(必填)" value="{{ restaurant.category }}">
        </div>
        <div class="mb-3">
          <label for="image">圖片網址</label>
          <input type="text" name="image" class="input" id="image" placeholder="請輸入餐廳圖片網址(必填)" value="{{ restaurant.image }}">
        </div>
        <div class="mb-3">
          <label for="location">地址</label>
          <input type="text" name="location" class="input" id="location" placeholder="請輸入餐廳地址(必填)" value="{{ restaurant.location }}">
        </div>
        <div class="mb-3">
          <label for="phone">電話</label>
          <input type="text" name="phone" class="input" id="phone" placeholder="請輸入餐廳電話(必填)" value="{{ restaurant.phone }}">
        </div>
        <div class="mb-3">
          <label for="google_map">google map網址</label>
          <input type="text" name="google_map" class="input" id="google_map" placeholder="請輸入餐廳google map網址" value="{{ restaurant.google_map }}">   
        </div>
        <div class="mb-3">
          <label for="rating">評分</label>
          <input type="text" name="rating" class="input" id="rating" placeholder="請輸入餐廳評分(必填)" value="{{ restaurant.rating }}">
        </div>
        <div class="mb-3">
          <label for="description">介紹</label>
          <textarea name="description" class="" id="description" rows="4" placeholder="請輸入介紹文字">{{ restaurant.description }}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
  </div>
</div>